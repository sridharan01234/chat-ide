{
  "name": "ai-code-assistant",
  "displayName": "AI Code Assistant",
  "description": "An AI-powered code assistant with enhanced drag-and-drop functionality.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:aiAssistantChat",
    "onCommand:ai-assistant.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant",
          "title": "AI Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "views": {
      "ai-assistant": [
        {
          "id": "aiAssistantChat",
          "name": "Chat",
          "type": "webview",
          "when": "true"
        },
        {
          "id": "aiAssistantDropZone",
          "name": "Drop Zone",
          "type": "tree",
          "when": "true"
        },
        {
          "id": "aiAssistantFiles",
          "name": "Attached Files",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "ai-assistant.openChat",
        "title": "Open AI Assistant",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ai-assistant.newChat",
        "title": "New Chat",
        "icon": "$(add)"
      },
      {
        "command": "ai-assistant.attachActiveFile",
        "title": "Attach Active File to Chat",
        "icon": "$(file-add)"
      },
      {
        "command": "ai-assistant.attachSelection",
        "title": "Attach Selected Code to Chat",
        "icon": "$(symbol-snippet)"
      },
      {
        "command": "ai-assistant.attachFileFromExplorer",
        "title": "Attach to AI Chat",
        "icon": "$(file-add)"
      },
      {
        "command": "ai-assistant.attachMultipleFiles",
        "title": "Attach Multiple Files/Folders",
        "icon": "$(files)"
      },
      {
        "command": "ai-assistant.startInlineChat",
        "title": "Start Inline Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ai-assistant.acceptInlineChat",
        "title": "Accept Inline Chat Suggestion",
        "icon": "$(check)"
      },
      {
        "command": "ai-assistant.rejectInlineChat",
        "title": "Reject Inline Chat Suggestion",
        "icon": "$(close)"
      },
      {
        "command": "ai-assistant.showCopilotPanel",
        "title": "Show Copilot-style Input Panel",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-assistant.closeCopilotPanel",
        "title": "Close Copilot-style Input Panel",
        "icon": "$(close)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ai-assistant.attachActiveFile",
          "when": "view == aiAssistantChat",
          "group": "navigation@0"
        },
        {
          "command": "ai-assistant.attachMultipleFiles",
          "when": "view == aiAssistantChat",
          "group": "navigation@0"
        },
        {
          "command": "ai-assistant.newChat",
          "when": "view == aiAssistantChat",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "ai-assistant.attachFileFromExplorer",
          "when": "view == aiAssistantFiles && viewItem == attachedFile",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "ai-assistant.attachFileFromExplorer",
          "when": "!explorerResourceIsFolder",
          "group": "aiassistant@1"
        },
        {
          "command": "ai-assistant.attachMultipleFiles",
          "when": "explorerResourceIsFolder",
          "group": "aiassistant@1"
        }
      ],
      "editor/context": [
        {
          "command": "ai-assistant.attachSelection",
          "when": "editorHasSelection",
          "group": "aiassistant@1"
        },
        {
          "command": "ai-assistant.attachActiveFile",
          "when": "!editorHasSelection",
          "group": "aiassistant@1"
        },
        {
          "command": "ai-assistant.startInlineChat",
          "when": "editorTextFocus",
          "group": "aiassistant@2"
        },
        {
          "command": "ai-assistant.showCopilotPanel",
          "when": "editorTextFocus",
          "group": "aiassistant@3"
        }
      ],
      "editor/title/context": [
        {
          "command": "ai-assistant.attachActiveFile",
          "group": "aiassistant@1"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-assistant.attachFileFromExplorer",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "ai-assistant.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "ai-assistant.attachActiveFile",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      },
      {
        "command": "ai-assistant.attachSelection",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorHasSelection"
      },
      {
        "command": "ai-assistant.attachMultipleFiles",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "ai-assistant.startInlineChat",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-assistant.acceptInlineChat",
        "key": "tab",
        "when": "inlineSuggestionVisible"
      },
      {
        "command": "ai-assistant.rejectInlineChat",
        "key": "escape",
        "when": "inlineSuggestionVisible"
      },
      {
        "command": "extension.escapeInlineInput",
        "key": "escape",
        "when": "inlineInputActive"
      },
      {
        "command": "ai-assistant.showCopilotPanel",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-assistant.closeCopilotPanel",
        "key": "escape",
        "when": "copilotPanelVisible"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/vscode": "^1.80.0",
    "@types/jquery": "^3.5.29",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "jquery": "^3.7.1"
  }
}
